
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Sự Kiện
      <small>HCMC-STUDENTS</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="#">Sự Kiện</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="box box-info">
          <div class="box-header">
            <h3 class="box-title"><%= news.title %>
              <small>HCMC-STUDENTS</small>
            </h3>
            <!-- tools box -->
            <div class="pull-right box-tools">
              <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i></button>
              <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i></button>
            </div>
            <!-- /. tools -->
          </div>
          <!-- /.box-header -->
          <div class="box-body pad">
            <form action="/news" method="POST">
                  <div class="form-group">
                    <label>Tiêu đề</label>
                    <input type="text" name="title" value="<%= news.title %>" class="form-control">
                  </div>

                  <div class="form-group">
                    <label>Đoạn mô tả ngắn</label>
                    <textarea type="text" name="brief" class="form-control"><%= news.brief %></textarea>
                  </div>

                  <div class="form-group">
                    <label>Hình Thumbnail</label>
                    <input type="file" name="thumbnail" id="exampleInputFile"> <br />
                    <img src="<%= news.thumbnail %>" width="300" height="200" />
                  </div>

                  <div class="form-group">
                    <label>Nội dung</label>
                    <textarea id="editor1" name="content" rows="10" cols="80" class="form-control">
                        <%= news.content %>
                    </textarea>
                  </div>

                  <div class="form-group">
                    <input type="submit" class="btn btn-default" style="float: right;"/>
                  </div>
            </form>
          </div>
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col-->
    </div>
    <!-- ./row -->
  </section>
  <!-- /.content -->
  <script>
      $(function () {
        CKEDITOR.replace('editor1');
      });
  </script>
